generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customers {
  id        Int       @id @default(autoincrement())
  firstName String    @db.VarChar(255)
  lastName  String    @db.VarChar(255)
  email     String    @unique @db.VarChar(255)
  phone     String    @db.VarChar(13) // Indian Phone Number
  address1  String    @db.VarChar(255)
  address2  String?   @db.VarChar(255)
  state     String    @db.VarChar(2)
  zip       String    @db.VarChar(6) // INDIAN ZIP CODE
  notes     String?
  active    Boolean   @default(true)
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  updatedAt DateTime  @default(now()) @updatedAt @db.Timestamp(6)
  Tickets   Tickets[]
}

model Tickets {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(255)
  description String?   @db.VarChar(255)
  completed   Boolean   @default(false)
  tech        String    @default("unassigned")
  createdAt   DateTime  @default(now()) @db.Timestamp(6)
  updatedAt   DateTime  @default(now()) @updatedAt @db.Timestamp(6)
  customerId  Int
  customer    Customers @relation(fields: [customerId], references: [id], onUpdate: NoAction, onDelete: NoAction)
}
